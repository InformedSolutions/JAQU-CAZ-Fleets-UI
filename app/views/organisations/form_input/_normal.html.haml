.govuk-form-group
  = form.label :email, 'Email address', class: 'govuk-label'
  = form.text_field :email, class: 'govuk-input', maxlength: 45

.govuk-form-group
  = form.label :password, 'Password', class: 'govuk-label'
  = form.password_field :password, class: 'govuk-input', maxlength: 45

.govuk-form-group
  = form.label :password_confirmation, 'Confirm Password', class: 'govuk-label'
  = form.password_field :password_confirmation, class: 'govuk-input', maxlength: 45
