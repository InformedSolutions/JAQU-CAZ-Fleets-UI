.govuk-form-group{class: ('govuk-form-group--error' if errors[:name].present?)}
  = form.label :name, 'Name', class: 'govuk-label'
  - if errors[:name].present?
    %span#name-error.govuk-error-message
      %span.govuk-visually-hidden Error:
      = errors[:name].join(', ')
  = form.text_field :name,
                     class: determinate_input_class(errors[:name]),
                     value: params.dig(:users, :name),
                     maxlength: 45

.govuk-form-group{class: ('govuk-form-group--error' if errors[:email_address].present?)}
  = form.label :email_address, 'Email address', class: 'govuk-label'
  .govuk-hint This will be used to send an invite to create an account
  - if errors[:email_address].present?
    %span#email_address-error.govuk-error-message
      %span.govuk-visually-hidden Error:
      = errors[:email_address].join(', ')
  = form.text_field :email_address,
                    class: "govuk-input #{'govuk-input--error' if errors[:email_address].present?}",
                    value: params.dig(:users, :email_address),
                    maxlength: 45
