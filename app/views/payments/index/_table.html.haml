%table.govuk-table
  %thead.govuk-table__head
    %tr.govuk-table__row
      %th.govuk-table__header{scope: 'col'}
        Registration
      - @dates[direction].each do |date|
        %th.govuk-table__header{scope: 'col'}
          = date[:name]
  %tbody.govuk-table__body
    - @charges.vehicle_list.each do |vehicle|
      %tr.govuk-table__row
        %td.govuk-table__cell
          = vehicle.vrn
        - @dates[direction].each do |date|
          = render 'payments/index/checkbox', date: date[:value], vehicle: vehicle
