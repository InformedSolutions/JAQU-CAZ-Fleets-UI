.govuk-form-group
  %label.govuk-label{for: 'vrn-search'}
    Search for a number plate
  = form.text_field :vrn_search,
                    class: 'govuk-input govuk-input--width-10',
                    id: 'vrn-search',
                    value: @search
  = form.submit 'Search',
                class: 'govuk-button govuk-button--secondary',
                'data-module': 'govuk-button'
