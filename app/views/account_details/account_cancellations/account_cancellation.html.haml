- title_and_header = 'Why do you want to close the account?'
- content_for(:title, title_and_header)

= render 'shared/js_back_link'

:ruby
  closure_reasons = [
    { name: 'VEHICLES_UPDATED_TO_NON_CHARGEABLE', value: 'The business has upgraded its vehicles and now none are subject to charge' },
    { name: 'VEHICLES_NOT_CHARGED', value: 'The business were not charged in any live Clean Air Zone' },
    { name: 'NOT_A_TRAVEL_DESTINATION', value: 'The business does not travel in the live Clean Air Zone' },
    { name: 'NON_OPERATIONAL_BUSINESS', value: 'The business no longer operates' },
    { name: 'OTHER', value: 'Other' }]

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds

      = form_tag submit_account_cancellation_path do
        .govuk-form-group{class: ('govuk-form-group--error' if alert)}
          %fieldset.govuk-fieldset
            %legend.govuk-fieldset__legend.govuk-fieldset__legend--l
              %h1.govuk-fieldset__heading
                = title_and_header

            - if alert
              %span#closure_reason-error.govuk-error-message
                %span.govuk-visually-hidden Error:
                = alert

            .govuk-radios
              - closure_reasons.each do |reason|
                .govuk-radios__item
                  %input.govuk-radios__input{name: 'reason',
                                            type: 'radio',
                                            value: reason[:name],
                                            id: "#{reason[:name].downcase}-id",
                                            checked: false}
                  %label.govuk-label.govuk-radios__label{for: "#{reason[:name].downcase}-id"}
                    = reason[:value]

        = submit_tag 'Close account', class: 'govuk-button', 'data-module': 'govuk-button'

        %p
          = link_to 'Exit without closing', primary_users_account_details_path, class: 'govuk-link', id: 'exit'
