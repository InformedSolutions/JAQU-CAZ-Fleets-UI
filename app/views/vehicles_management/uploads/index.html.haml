= link_to 'Back', @vehicles_present ? fleets_path : submission_method_fleets_path, class: 'govuk-back-link'

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      - if @job_errors
        = render 'job_errors'
      - elsif alert
        = render 'shared/error_summary', error_msg_div: '#govuk-error-message', error_msg: alert

      - if @vehicles_present
        - title_and_header = "Replace and upload a new list of vehicles to #{current_user.actual_account_name} account"
        %h1.govuk-heading-l= title_and_header
      - else
        - title_and_header = "Upload the vehicle list to #{current_user.actual_account_name} account"
        %h1.govuk-heading-l= title_and_header

      = render 'description'

      - content_for(:title, title_and_header)
