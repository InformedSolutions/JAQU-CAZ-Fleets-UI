- title_and_header = 'Remove vehicles from your list?'
- content_for(:title, title_and_header)

= render 'shared/js_back_link'

%main.govuk-main-wrapper.govuk-main-wrapper--auto-spacing#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h2.govuk-heading-l= title_and_header

      %dl.govuk-summary-list
        .govuk-summary-list__row
          %dt.govuk-summary-list__key Vehicles to remove
          %dd.govuk-summary-list__value
            = @vrns_count
          %dd.govuk-summary-list__actions
            = link_to 'View details', vehicles_to_remove_details_fleets_path

      = link_to 'Remove',
                 confirm_remove_vehicles_fleets_path,
                 method: :delete,
                 class: 'govuk-button',
                 id: 'remove'
