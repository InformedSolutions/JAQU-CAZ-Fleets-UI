%section.govuk-tabs__panel{id: 'edit-vehicle-list'}
  %h2.govuk-heading-l=title_and_header

  .govuk-grid-row
    .govuk-grid-column-two-thirds
      - if alert
        = render 'shared/error_summary',
                  error_msg_div: '#edit_option-error',
                  error_msg: "#{alert}"

      = form_for('edit_form', url: submit_edit_fleets_path, method: :post) do |f|
        .govuk-form-group{class: ('govuk-form-group--error' if alert.present?)}
          %fieldset.govuk-fieldset
            - if alert.present?
              %span#edit_option-error.govuk-error-message
                %span.govuk-visually-hidden Error:
                = alert

            .govuk-radios
              .govuk-radios__item
                %input#edit-fleet-option-1.govuk-radios__input{name: 'edit_option',
                                                               type: 'radio',
                                                               value: 'add_single'}
                %label.govuk-label.govuk-radios__label{for: 'edit-fleet-option-1'}
                  %strong Add single vehicle
                .govuk-hint.govuk-radios__hint
                  Enter your vehicles one by one.

              .govuk-radios__item
                %input#edit-fleet-option-2.govuk-radios__input{name: 'edit_option',
                                                               type: 'radio',
                                                               value: 'add_multiple'}
                %label.govuk-label.govuk-radios__label{for: 'edit-fleet-option-2'}
                  %strong Upload a new list
                .govuk-hint.govuk-radios__hint
                  Repleace your vehicle list with a new CSV upload.

              .govuk-radios__item
                %input#edit-fleet-option-3.govuk-radios__input{name: 'edit_option',
                                                               type: 'radio',
                                                               value: 'remove'}
                %label.govuk-label.govuk-radios__label{for: 'edit-fleet-option-3'}
                  %strong Remove vehicles
                .govuk-hint.govuk-radios__hint
                  Remove vehicles one by one.

        = f.submit 'Continue', class: 'govuk-button', 'data-module': 'govuk-button'
