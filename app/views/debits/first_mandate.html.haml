- title_and_header = 'First create a Direct Debit mandate'
- content_for(:title, title_and_header)

= link_to 'Back', @back_button_url, class: 'govuk-back-link'

%main.govuk-main-wrapper.govuk-main-wrapper--auto-spacing#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-l
        = title_and_header
      %p
        You must create a Direct Debit mandate before you can complete any payments by Direct Debit.
        If you wish to pay by card instead please click the back button.

      = form_for('payment', url: debits_path, method: :post) do |f|
        = hidden_field_tag('local-authority', @zone_id)
        = f.submit 'Continue', class: 'govuk-button', 'data-module': 'govuk-button'
