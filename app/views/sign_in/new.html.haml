%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl Company account log in

      = form_tag '#', method: :post do
        .govuk-form-group
          %label.govuk-label{for: 'email'} Email address
          %input.govuk-input

        .govuk-form-group
          %label.govuk-label{for: 'password'} Password
          %input.govuk-input.govuk-input--width-20{type: 'password'}

        %p
          = link_to('Reset password', '#')

        = submit_tag 'Continue', class: 'govuk-button', 'data-module': 'govuk-button'
