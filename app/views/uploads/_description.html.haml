%ol.govuk-list.govuk-list--number
  %li
    = link_to('Download the CSV', download_template_uploads_path)
  %li Fill in all of your vehicleâ€™s registration numbers
  %li Upload the CSV below
%p
  If you need help, read the registration guide
= form_tag(uploads_path, multipart: true) do
  .govuk-form-group{class: ('govuk-form-group--error' if alert)}
    %label.govuk-label{for: "file-upload-1"}
      Upload a CSV file
    - if alert
      %span#govuk-error-message.govuk-error-message
        %span.govuk-visually-hidden Error:
        = alert
    %input#file-upload-1.govuk-file-upload{class:('govuk-file-upload--error' if alert),
                                           'aria-describedby': 'file-upload-1',
                                           name: 'file',
                                           type: 'file'}
  .govuk-form-group
    = submit_tag 'Upload Fleet', class: 'govuk-button', 'data-module': 'govuk-button'
