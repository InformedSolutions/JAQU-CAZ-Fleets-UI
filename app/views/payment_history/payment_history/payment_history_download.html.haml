- title_and_header = 'Payment history download'
- content_for(:title, title_and_header)

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-full
      %h1.govuk-heading-l= title_and_header
      - if @file_name
        %p
          = link_to(@file_name, @file_url, id: 'payment-history', class: 'govuk-link', download: true)
