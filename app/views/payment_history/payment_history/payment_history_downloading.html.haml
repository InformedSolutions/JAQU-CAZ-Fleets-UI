- title_and_header = 'Downloading your payment history'
- content_for(:title, title_and_header)

= render 'shared/js_back_link'

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-full
      %h1.govuk-heading-l= title_and_header
      %p
        We will email you a link to download a CSV of your payment history shortly.
      %p
        = link_to 'Return to payment history', payment_history_path
