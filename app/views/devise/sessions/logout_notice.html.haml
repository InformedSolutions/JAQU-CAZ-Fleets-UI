- title_and_header = 'You will be signed out in 1 minute'
- content_for(:title, title_and_header)

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-l= title_and_header

      %p
        Due to a lack of activity, we are signing you out, to keep the business account secure.
        If you would like to stay signed in, continue.

      = link_to 'Continue', @back_button_url, class: 'govuk-button'

      #timeout_logout_data{timedout_user_path: timedout_user_path}
      = javascript_pack_tag 'timeoutLogout'
