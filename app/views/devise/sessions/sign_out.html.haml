- title_and_header = 'Sign out successful'
- content_for(:title, title_and_header)

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = title_and_header
      %p
        You are now signed out of your Drive in a Clean Air Zone account.
      %p
        = link_to 'Sign back into your account',
                  new_user_session_path,
                  id: 'sign-in'
