- title_and_header = 'What would you like to do?'
- content_for(:title, title_and_header)

= render 'shared/js_back_link'

%main.govuk-main-wrapper#main-content{role: 'main'}
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      %h1.govuk-heading-xl
        = title_and_header

      %fieldset.govuk-fieldset{'aria-describedby': 'create-account-hint'}
      %legend.govuk-visually-hidden Create account fields

      = form_for('relevant_service', url: submit_what_would_you_like_to_do_path, method: :post) do |f|
        .govuk-form-group{class: ('govuk-form-group--error' if @error.present?)}
          %fieldset.govuk-fieldset
            - if @error.present?
              %span#check_vehicle_option-error.govuk-error-message
                %span.govuk-visually-hidden Error:
                = @error
            .govuk-radios
              .govuk-radios__item
                %input#check-vehicle-option-1.govuk-radios__input{name: 'check_vehicle_option', type: 'radio', value: 'single', checked: checked_fleet_checked?('single') }
                %label.govuk-label.govuk-radios__label{for: 'check-vehicle-option-1'}
                  %b Check a single vehicle
                .govuk-hint.govuk-radios__hint
                  Find out if your vehicle will be charged to drive in a Clean Air Zone.

              .govuk-radios__item
                %input#check-vehicle-option-2.govuk-radios__input{name: 'check_vehicle_option', type: 'radio', value: 'multiple', checked: checked_fleet_checked?('multiple')}
                %label.govuk-label.govuk-radios__label{for: 'check-vehicle-option-2'}
                  %b Check multiple vehicles
                .govuk-hint.govuk-radios__hint
                  If you have a business that owns or manages multiple vehicles create an account or sign in to check if the vehicles will be charged to drive in a Clean Air Zone.

        = f.submit 'Continue', class: 'govuk-button', 'data-module': 'govuk-button'
